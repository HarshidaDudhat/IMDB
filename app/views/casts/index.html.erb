<h1>Listing Casts</h1>

<table>
  <thead>
    <tr>
      <th>Cast Name</th>
      <th>"Date of Birth"</th>
      <th>"Number of Films"</th>
      <th>Rank</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casts.each do |cast| %>
      <tr>
        <td><%= cast.name%></td>
        <td><%= cast.date_of_birth%></td>
        <td><%= cast.no_of_movies%></td>
        <td><%= cast.rank%></td>

        <td><%= link_to 'Show', cast %></td>
        <td><%= link_to 'Edit', edit_cast_path(cast) %></td>
        <td><%= link_to 'Destroy', cast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

