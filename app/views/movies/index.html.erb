<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Movie Name   :</th>
      <th>Ratings      :</th>
      <th>Release Date :</th>
      <th>Rank         :</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.ratings%></td>
        <td><%= movie.release_date%></td>
        <td><%= movie.rank%></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
  
</table>


<br>

